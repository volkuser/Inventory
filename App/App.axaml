<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:App"
             x:Class="App.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <StyleInclude Source="avares://Citrus.Avalonia/Citrus.xaml"/>
        <StyleInclude Source="resm:Avalonia.Controls.DataGrid.Themes.Default.xaml?assembly=Avalonia.Controls.DataGrid"/>
        
        <Style Selector="TextBlock, TextBox, ComboBox, Button, DatePicker">
            <Setter Property="TextBlock.FontFamily" 
                    Value="avares://App/Assets/Comfortaa-Regular.ttf#Comfortaa"/>
            <Setter Property="TextBlock.FontSize" Value="22"/>
        </Style>
    </Application.Styles>
</Application>
