<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:App"
             x:Class="App.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <SimpleTheme Mode="Light"/>
        
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Simple.xaml"/>
        
        <Style Selector="Button.round /template/ ContentPresenter">
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        <Style Selector="Button:pointerover.round /template/ ContentPresenter"/>
        
        <Style Selector="TextBlock, TextBox, ComboBox, Button, DatePicker">
            <Setter Property="TextBlock.FontFamily" 
                    Value="avares://App/Assets/Comfortaa-Regular.ttf#Comfortaa"/>
            <Setter Property="TextBlock.FontSize" Value="25"/>
        </Style>
    </Application.Styles>
</Application>
